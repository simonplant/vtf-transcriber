{
  "manifest_version": 3,
  "name": "VTF Audio Transcriber",
  "version": "1.0.0",
  "description": "Captures and transcribes audio specifically from the VTF platform.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "options_page": "options.html",
  
  "permissions": [
    "storage",     
    "notifications",
    "tabCapture",
    "offscreen",
    "tabs"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*",
    "https://vtf.t3live.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
